<h1>Listing menus</h1>

<table>
  <thead>
    <tr>
      <th>Menu</th>
      <th>Dish</th>
      <th>Total</th>
      <th>Price</th>
      <th>Restaurant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.menu_id %></td>
        <td><%= menu.dish_id %></td>
        <td><%= menu.total %></td>
        <td><%= menu.price %></td>
        <td><%= menu.restaurant_id %></td>
        <td><%= link_to 'Show', menu %></td>
        <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
        <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Menu', new_menu_path %>
